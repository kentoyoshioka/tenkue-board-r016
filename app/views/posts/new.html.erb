<div class="post_wrapper">
  <div class="post_wrapper__content">
    <div class="post_wrapper__content__post_form">
      <h3>
        <span>新規投稿</span>
      </h3>
      <%= form_with model: @post do |form| %>
        <div>
          <%= form.label :投稿内容 %><br>
          <%= form.text_area :text, placeholder: "内容を記述" %>
        </div>

        <div>
          <%= form.submit "投稿" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
